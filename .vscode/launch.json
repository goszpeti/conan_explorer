{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/conan_app_launcher/__main__.py",
            "env": {
                "CAL_DEBUG_LEVEL": "2",
                "DISABLE_ASYNC_LOADER": "False"
            },
            "args": [
                "--debug"
            ],
            "console": "integratedTerminal",
            "subProcess": true,
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "subProcess": true,
        },
        {
            "name": "Python: Testing",
            "type": "python",
            "request": "test",
            "console": "integratedTerminal", // needed, so that venv activates
            "subProcess": true,
            "justMyCode": false,
            "python": "${command:python.interpreterPath}",
            "env": {
                "CAL_DEBUG_LEVEL": "2",
                "SKIP_CREATE_CONAN_TEST_DATA": "True",
            },
        },
    ]
}