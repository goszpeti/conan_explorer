{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/RelWithDebInfo/ConanExplorer.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "Main",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/conan_explorer/__main__.py",
            "env": {
                "CAL_DEBUG_LEVEL": "2",
                "DISABLE_ASYNC_LOADER": "False"
            },
            "args": [
                "--debug"
            ],
            "console": "integratedTerminal",
            "subProcess": true,
            "justMyCode": false
        },
        {
            "name": "Python: Attach using Process Id",
            "type": "debugpy",
            "request": "attach",
            "subProcess": true,
            "processId": "${command:pickProcess}",
            "justMyCode": false,
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "subProcess": true,
        },
        {
            "name": "Python: Testing",
            "type": "python",
            "request": "test",
            "console": "integratedTerminal", // needed, so that venv activates
            "subProcess": true,
            "justMyCode": false,
            "python": "${command:python.interpreterPath}",
            "env": {
                "CAL_DEBUG_LEVEL": "2",
                "SKIP_CREATE_CONAN_TEST_DATA": "False",
            },
        },

    ]
}