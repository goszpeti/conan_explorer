/*
QSS template
Usable Macros with Jinja2 syntax:
 - MAIN_FONT_SIZE (in pt)
 - USER_COLOR
 - WINDOW_BORDER_RADIUS

Palette:
 - Conan Accent Color:  #6699CC
 - light #BCBCBC
 - dark : #D3D3D3
 - darker: #B7B7B7
 - darkest: #A8A8A8

     main-background: #202020;
    text: #f8f8ff;
    deselected: #808086;
    selectables: #5c5c5c;
    editable: #1e1d23;
    conan-dark: #6699CC;
    conan-light: #AFD4E5;
*/

* {
    color: #f8f8ff;
    font-size: {{MAIN_FONT_SIZE}}pt;
}

/* Setup for specific widgets */

QWidget#centralwidget{
    border-style: solid;
    border-width: 2px; 
    background-color: #5c5c5c;
    border-color: {{USER_COLOR}};
    border-radius: {{WINDOW_BORDER_RADIUS}}px;
}
QLabel#page_title {
    font-size: {{MAIN_FONT_SIZE + 12 }}pt;
    border-style: solid;
    border-bottom-color: #6699CC;
    border-bottom-width: 2px;
    padding: 3px;
}

QLabel#right_menu_top_title_label {
    font-size: {{MAIN_FONT_SIZE + 2}}pt;
}

QLabel#right_menu_bottom_title_label {
    font-size: {{MAIN_FONT_SIZE + 2}}pt;
    padding: 3px;
}
AppLink {
    background-color: #D3D3D3;
}


/* Styling for buttons each frame */

/* only QPushButton - not ClickableLabel */


QFrame#content_frame{
    background-color: #5c5c5c;
    border-radius: 7px;
}

/* QFrame#content_frame QFrame{
    background-color: #202020;
} */
QFrame#content_frame .QPushButton{
    border-radius: 5px;
    margin: 2px;
    text-align:middle;
    background-color: #5c5c5c;
    padding: 3px;
    min-width: 30px;
}
QFrame#content_frame .QPushButton:hover{
    background-color: #B7B7B7;
}
QFrame#content_frame .QPushButton:pressed{
    padding-top: 5px;
    background-color: #A8A8A8;
}
QFrame#content_frame .QPushButton:checked{
    background-color: #A8A8A8;
}

ClickableIcon{
    background-color: transparent;
}
ClickableIcon:hover{
    background-color: #B7B7B7;
}
ClickableIcon:pressed{
    border-style: solid;
    border-top-color: transparent;
    border-right-color: transparent;
    border-left-color: transparent;
    padding-top: 2px;
    background-color: #A8A8A8;
}


QFrame#left_menu_frame{
    background-color: #202020;
}
QFrame#left_menu_frame QPushButton{
    border-radius: 5px;
    margin: 2px;
    text-align:middle;
    background-color: #202020;
    padding: 3px;
    min-width: 30px;
}
QFrame#left_menu_frame QPushButton:hover{
    background-color: #5c5c5c;
}
QFrame#left_menu_frame QPushButton:pressed{
    padding-top: 5px;
    background-color: #808086;
}
QFrame#left_menu_frame QPushButton:checked{
    background-color: #5c5c5c;
}


QFrame#right_menu_frame{
    background-color:  #808086;
}
QFrame#right_menu_frame QPushButton{
    border-radius: 5px;
    margin: 2px;
    text-align:middle;
    background-color: #808086;
    padding: 3px;
    min-width: 30px;
}
QFrame#right_menu_frame QPushButton:hover{
    background-color: #5c5c5c;
    /* #B7B7B7; */
}
QFrame#right_menu_frame QPushButton:pressed{
    padding-top: 5px;
    background-color: #B7B7B7;
}
QFrame#right_menu_frame QPushButton:checked{
    background-color: #5c5c5c;
}


/* Window control buttons */

QPushButton#minimize_button{
background-color: transparent;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 0px;
    border-top-right-radius: 0px;
}
QPushButton:hover#minimize_button, QPushButton:hover#restore_max_button{
    border-style: solid;
    background-color: #BCBCBC;
}
QPushButton:pressed#minimize_button, QPushButton:pressed#restore_max_button{
    background-color: #D3D3D3;
    padding: 1px
}
QPushButton#restore_max_button{
    background-color: transparent;
    border-radius: 0px;
}
QPushButton#close_button{
    background-color: transparent;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    border-top-left-radius:0px;
    border-bottom-left-radius: 0px;
}
QPushButton#close_button:hover{
    background-color: #C42B1C;
}
QPushButton#close_button:pressed{
    background-color: #C1655D;
}

/* Generic widgets */

QMainWindow{
    background-color: transparent;
}

QTabWidget{
    background-color: white;
}
QTabBar::tab {
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    /* color: #808086; */
    padding: 3px;
    margin-left:3px;
    background-color: #474747;
}
QTabBar::tab:selected{
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    padding-left: 3px;
    padding-bottom: 2px;
    margin-left:3px;
    background-color: #474747;
}
QTabBar::tab:hover {
    background-color: #D3D3D3;
}
QTabBar::tab:!selected {
    background-color: #F0F0F0;
    margin-top: 2px; /* make non-selected tabs look smaller */
}
QTabBar::tab:!selected:hover {
    background-color: #D3D3D3;
    margin-top: 2px; /* make non-selected tabs look smaller */
}

QListView, QTreeView, QListWidget {
    background-color: #474747;
}
QListView::item:hover, QTreeView::item:hover{
    background: #D3D3D3;
}

QTreeView::item:selected {
    border: 1px solid #B7B7B7;
}
QTreeView::item:selected:active{
    color: black;
    background: #A8A8A8;
}
QTreeView::item:selected:!active {
    background: #B7B7B7;
}
QTreeView::branch:closed:has-children {
    image: url(icons:forward.png);
}
QTreeView::branch:open:has-children {
    image: url(icons:expand.png);
}

QTreeView::branch:hover:closed:has-children {
    image: url(icons:forward_b.png);
}
QTreeView::branch:hover:open:has-children:hover {
    image: url(icons:expand_b.png);
}

QScrollBar:vertical {
    border: 0px solid transparent;
    background: transparent;
    width: 6px;
    margin: 0px 1px 0px 0px;
}
QScrollBar::handle:vertical {
    min-height: 0px;
    border-radius: 0px;
    background-color: #BCBCBC;
}
QScrollBar::add-line:vertical {
    height: 0px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QSplitter::handle {
    background: #D3D3D3;
    height: 3px;
}

QHeaderView {
    background-color: #202020;
    font-weight: 500;
    font-style: normal;
    /* font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; */
    font-size: {{MAIN_FONT_SIZE}}pt;
}
QHeaderView::section {
    padding-left: 4;
    background-color: #202020;
    border-top-color: transparent;
    border-left-color: transparent;
    border-right-color: white;
    border-bottom-color: transparent;
    border-style: solid;
    border-width: 2px;
}

QProgressBar::chunk {
    background-color: #6699CC;
    border-radius: 5px;
}

QTextBrowser{ 
    background-color: #1e1d23;
    border-bottom-right-radius: 7px;
}

QStackedWidget{
    background: #808086;
}


QLineEdit {
    border-width: 1px; border-radius: 4px;
    border-color: rgb(58, 58, 58);
    border-style: inset;
    padding: 0 8px;
    background-color: #1e1d23;
    selection-background-color:#808086;
    selection-color: #f8f8ff;
}