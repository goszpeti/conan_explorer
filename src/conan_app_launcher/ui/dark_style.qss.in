/*
QSS template
Usable Macros with Jinja2 syntax:
 - MAIN_FONT_SIZE (in pt)
 - USER_COLOR
 - WINDOW_BORDER_RADIUS

Palette:
 - Conan Accent Color:  #6699CC
 - light: #808086
 - light-dark: 696969
 - dark: #5c5c5c
 - darker: #474747
 - almost here: #
 - darkest: #202020
*/

* {
    color: #f8f8ff;
    font-size: {{MAIN_FONT_SIZE}}pt;
}

/* Setup for specific widgets */

QWidget#central_widget{
    border-style: solid;
    border-width: 2px;
    background-color: #5c5c5c;
    border-color: {{USER_COLOR}};
    border-radius: {{WINDOW_BORDER_RADIUS}}px;
}

/* Top Frame Subwidgets */

QLabel#page_title {
    border-style: solid;
    border-bottom-color: #6699CC;
    border-bottom-width: 2px;
    margin: 1px;
    font-size: {{MAIN_FONT_SIZE + 11 }}pt;
}

/* Window control buttons */

QPushButton#minimize_button,
QPushButton#restore_max_button,
QPushButton#close_button {
    background-color: transparent;
}

QPushButton:hover#minimize_button,
QPushButton:hover#restore_max_button {
    border-style: solid;
    background-color: #BCBCBC;
}

QPushButton:pressed#minimize_button,
QPushButton:pressed#restore_max_button {
    background-color: #D3D3D3;
    padding: 1px
}

QPushButton:hover#close_button {
    border-style: solid;
    background-color: #C42B1C;
}

QPushButton:pressed#close_button {
    background-color: #C1655D;
}

/* Center Frame Subwidgets */

QFrame#content_frame {
    background-color: #5c5c5c;
    border-radius: 7px;
}

QFrame#content_frame .QFrame {
    background-color: transparent;
    border-radius: 7px;
}

QFrame#content_frame .QPushButton,
QToolButton {
    border-radius: 5px;
    margin: 2px;
    text-align: middle;
    background-color: #474747;
    padding: 3px;
    min-width: 30px;
}

QFrame#content_frame .QPushButton:hover,
QToolButton:hover {
    background-color: #5c5c5c;
}

QFrame#content_frame .QPushButton:pressed,
QToolButton:pressed {
    padding-top: 5px;
    background-color: #696969;
}

QFrame#content_frame .QPushButton:checked,
QToolButton:checked {
    background-color: #5c5c5c;
}

AppGridView {
    background-color: #5c5c5c;
}

TabGrid {
    background-color: #808086;
}

TabScrollAreaWidgets {
    background-color: #808086;
}

AppLinkBase {
    /* background-color: #353839; */
    background-color: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #5a88b6, stop:1 #6699CC);
    border-radius: 7px;
}

ClickableIcon {
    border-radius: 5px;
    background-color: transparent;
}

ClickableIcon:hover {
    background-color: #5c5c5c;
}

ClickableIcon:pressed {
    border-style: solid;
    border-top-color: transparent;
    border-right-color: transparent;
    border-left-color: transparent;
    padding-top: 2px;
    background-color: #5c5c5c;
}

QLabel#about_label {
    background-color: #5c5c5c;
    border-radius: 5px;
    padding-left: 5px;
}

/* Left Frame Subwidgets */

QLabel#title_label {
    font: bold;
    font-size: {{MAIN_FONT_SIZE + 2 }}pt;
}
QFrame#left_menu_frame {
    background-color: #202020;
}

QFrame#left_menu_frame QPushButton {
    border-radius: 5px;
    margin: 2px;
    text-align: middle;
    background-color: #202020;
    padding: 3px;
    min-width: 30px;
}

QFrame#left_menu_frame QPushButton:hover {
    background-color: #474747;
}

QFrame#left_menu_frame QPushButton:pressed {
    padding-top: 5px;
    background: #5c5c5c;
}

QFrame#left_menu_frame QPushButton:checked {
    background-color: #474747;
}


/* Right Frame Subwidgets */

QFrame#right_menu_frame * {
    background-color: #808086;
}

QLabel#right_menu_top_title_label {
    font-size: {{MAIN_FONT_SIZE + 2}}pt;
    padding: 3px;
}

QLabel#right_menu_bottom_title_label {
    font-size: {{MAIN_FONT_SIZE + 2}}pt;
    padding: 3px;
}

QFrame#right_menu_frame QPushButton{
    border-radius: 5px;
    margin: 2px;
    text-align:middle;
    padding: 3px;
    min-width: 30px;
}
QFrame#right_menu_frame QPushButton:hover{
    background-color: #696969;
    /* #B7B7B7; */
}
QFrame#right_menu_frame QPushButton:pressed{
    padding-top: 5px;
    background-color: #5c5c5c;
}
QFrame#right_menu_frame QPushButton:checked{
    background-color: #696969;
}

QLabel#side_menu_title_label {
    font: bold;
    font-size: {{MAIN_FONT_SIZE + 1}}pt;
}




/* Generic widgets */

QMainWindow{
    background-color: transparent;
}
QDialog{
    background-color: #808086;
}
QDialog::title {
    background-color: #696969;
}
QDialog::title {
    background-color: #696969;
}

QTabWidget{
    background-color: #5c5c5c;
}
QTabWidget::pane {
    background: #5c5c5c;
    border-radius: 5px;
}
QTabWidget::tab-bar:bottom {
    bottom: 1px;
}

QScrollArea{
    background-color: #808086;
}

QWidget#info_contents {
    background-color: #808086;
}


QMessageBox QPushButton{
    background-color: #474747;
}

QTabBar::tab {
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    padding: 3px;
    margin-left:3px;
    background-color: #474747;
}
QTabBar::tab:selected{
    border-style: solid;
    border-top-color: transparent;
    border-right-color: transparent;
    border-left-color: transparent;
    border-bottom-color: #6699CC;
    border-bottom-width: 2px;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    padding-left: 3px;
    padding-bottom: 2px;
    margin-left:3px;
    background-color: #474747;
}
QTabBar::tab:hover {
    background-color: #5c5c5c;
}
QTabBar::tab:!selected {
    background-color: #696969;
    margin-top: 2px; /* make non-selected tabs look smaller */
}
QTabBar::tab:!selected:hover {
    background-color: #5c5c5c;
    margin-top: 2px; /* make non-selected tabs look smaller */
}

QListView, QTreeView, QListWidget {
    color: #f8f8ff;
    background-color: #474747;
    alternate-background-color: #474747;
    selection-background-color: #6699CC; /* Used on Mac */
    selection-color: white; /* Used on Mac */
    show-decoration-selected: 0;
}
QListView::item:hover, QTreeView::item:hover{
    background-color: #6699CC;
}
QTreeView::item:selected {
    color: #f8f8ff;
    background-color: #A8A8A8;
}
QTreeView::item:selected:active{
    color: black;
    background-color: #6699CC;
}
QTreeView::item:selected:!active {
    background: #6699CC;
}
QTreeView::branch:closed:has-children {
    image: url(icons:forward_w.png);
}
QTreeView::branch:open:has-children {
    image: url(icons:expand_w.png);
}
QTreeView::branch:hover:closed:has-children {
    image: url(icons:forward_b.png);
}
QTreeView::branch:hover:open:has-children:hover {
    image: url(icons:expand_b.png);
}
QScrollBar:vertical {
    border: 0px solid transparent;
    background: transparent;
    width: 10px;
    margin: 0px 0px 0px 0px;
}
QScrollBar::handle:vertical {
    min-height: 0px;
    border-radius: 0px;
    background: #D3D3D3;
}
QScrollBar::handle:vertical:hover {
    min-height: 0px;
    width: 12px;
    background: white;
}
QScrollBar::add-line:vertical {
    height: 0px;
    background: transparent;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}
QScrollBar::sub-line:vertical {
     background: transparent;
     height: 0px;
     subcontrol-position: top;
     subcontrol-origin: margin;
 }
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
     background: transparent;
 }

QHeaderView {
    background-color: #202020;
    font-weight: 500;
    font-style: normal;
    /* font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; */
    font-size: {{MAIN_FONT_SIZE}}pt;
}
QHeaderView::section {
    padding-left: 4;
    background-color: #202020;
    border-top-color: transparent;
    border-left-color: transparent;
    border-right-color: white;
    border-bottom-color: transparent;
    border-style: solid;
    border-width: 2px;
}

QProgressBar::chunk {
    background-color: #6699CC;
    border-radius: 5px;
}

QTextEdit{ 
    background-color: #1e1d23;
}
QTextBrowser{ 
    background-color: #474747;
}
QTextBrowser#console{ 
    background-color: #1e1d23;
    border-bottom-right-radius: 7px;
}

QStackedWidget{
    background-color: #808086;
    border-radius: 5px;
}

QMenu{
    background-color: #474747;
    padding-top: 10px;
    border-radius: {{WINDOW_BORDER_RADIUS}}px;
}
QMenu::item:selected{
    background-color: #5c5c5c;
}

QLineEdit {
    border-width: 1px;
    /* border-radius: 4px; */
    border-color: rgb(58, 58, 58);
    border-style: inset;
    padding: 0 8px;
    background-color: #1e1d23;
    selection-background-color:#808086;
    selection-color: #f8f8ff;
}

QToolTip{
    border-style: none; /* needed, otherwise the background color is not applied */
    background: #5c5c5c;
}

QSplitter::handle {
    background: #D3D3D3;
}
QSplitter::handle:horizontal {
    width: 4px;
}

QSplitter::handle:vertical {
    height: 4px;
}

QComboBox {
    color: #f8f8ff;	
    background: #202020;
}
QComboBox:disabled {
    color: #5c5c5c;
    background: #202020;
}
QComboBox:editable {
    background: #202020;
    selection-background-color: #202020;
}
QComboBox QAbstractItemView {
    color: #f8f8ff;	
    background: #202020;
    selection-color: #f8f8ff;
    selection-background-color: #202020;
}
QComboBox:!editable:on, QComboBox::drop-down:editable:on {
    color: #f8f8ff;	
    background: #202020;
}
